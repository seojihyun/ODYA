<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:weightSum="1"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#48d1cc">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="110dp"
            android:text="FindApple"
            android:textSize="25dp"
            android:textColor="#fffafa"
            android:layout_weight="9" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/editText"
            android:layout_weight="9"
            android:hint="Group_name" />

        <ImageView
            android:layout_width="38dp"
            android:layout_height="40dp"
            android:id="@+id/grouplist_button_search_group"
            android:layout_gravity="center_vertical"
            android:src="@drawable/button_search_group"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/grouplist_button_create_group"
            android:src="@drawable/button_create_group"
            android:layout_gravity="center"
            android:onClick="makeCreateGroupDialog" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_group"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />
</LinearLayout>

