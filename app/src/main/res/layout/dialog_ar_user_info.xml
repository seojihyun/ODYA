<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dip"
        android:layout_height="190dp"
    android:layout_gravity="center"
        android:background="@color/findappleWhite"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userInformation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:text="User 정보"
            android:paddingLeft="10dp"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:id="@+id/userInformation_name"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/userInformation"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="이름"
                android:background="@color/colorAccent"
                android:textColor="#ffffff"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:id="@+id/dialog_userInfo_title"
                android:editable="false"
                style="@android:style/Widget.Holo.EditText"
                android:autoText="false"
                android:text="Title"
                android:background="@color/dark_gray"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/ar_button_left"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="SOS"
                android:textColor="#ffffff"
                android:background="@color/material_blue_grey_800"
                android:layout_margin="3dp" />

            <Button
                android:id="@+id/ar_button_right"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="취소"
                android:textColor="#ffffff"
                android:background="@color/material_blue_grey_800"
                android:layout_margin="3dp" />
        </LinearLayout>
    </RelativeLayout>
